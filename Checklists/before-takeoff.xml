<?xml version="1.0" encoding="UTF-8" ?>


<PropertyList>
	<title>Before takeoff</title>
	<item>
		<name>Flight Instruments</name>
		<value>SET</value>
	</item>
	<item>
		<name>Engine Instruments</name>
		<value>CHECK</value>
	</item>
	<item>
		<name>Takeoff Data V1, VR, V2</name>
		<value>REVIEW</value>
	</item>
	<item>
		<name>Flaps</name>
		<value>Check</value>
	</item>
	<item>
		<name>Spoilers</name>
		<value>CHECK RETRACTED</value>
		<condition>
			<equals>
				<property>/controls/flight/speedbrake</property>
				<value>0</value>
			</equals>
		</condition>
		<binding>
			<command>property-assign</command>
			<property>/controls/flight/speedbrake</property>
			<value>0</value>
		</binding>
	</item>
	<item>
		<name>Line up clearance</name>
		<value>OBTAIN from ATC</value>
	</item>
	<item>
		<name>Landing Light</name>
		<value>ON</value>
		<marker>
			<x-m>-15.6471</x-m>
			<y-m>-0.1545</y-m>
			<z-m>-0.3190</z-m>
			<scale>1.5124</scale>
		</marker>
		<condition>
			<and>
				<property>/controls/lighting/landing-lights[0]</property>
				<property>/controls/lighting/landing-lights[1]</property>
				<property>/controls/lighting/landing-lights[2]</property>
			</and>
		</condition>
		<binding>
			<command>property-assign</command>
			<property>/controls/lighting/landing-lights[0]</property>
			<value>1</value>
		</binding>
		<binding>
			<command>property-assign</command>
			<property>/controls/lighting/landing-lights[1]</property>
			<value>1</value>
		</binding>
		<binding>
			<command>property-assign</command>
			<property>/controls/lighting/landing-lights[2]</property>
			<value>1</value>
		</binding>
	</item>
	<item>
		<name>Taxi Lights</name>
		<value>OFF</value>
		<condition>
			<not><property>/controls/lighting/taxi-lights</property></not>
		</condition>
		<binding>
			<command>property-assign</command>
			<property>/controls/lighting/taxi-lights</property>
			<value>0</value>
		</binding>
	</item>
	<item>
		<name>Strobe Light</name>
		<value>ON</value>
		<condition>
			<property>/controls/lighting/strobe</property>
		</condition>
		<binding>
			<command>property-assign</command>
			<property>/controls/lighting/strobe</property>
			<value>1</value>
		</binding>
	</item>
</PropertyList>
