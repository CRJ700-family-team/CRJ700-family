<?xml version="1.0"?>

<PropertyList>
	<name>debug</name>
	<x>10</x>
	<y>2</y>
	<layout>hbox</layout>
	<default-padding>2</default-padding>
	<font>
		<name>HELVETICA_12</name>
	</font>
	<color>
		<red>0</red>
		<green>0</green>
		<blue>0</blue>
		<alpha>0.8</alpha>
	</color>
	<text>
		<label>HDG_err 000.0 </label>
		<property>autopilot/internal/heading-bug-error-deg</property>
