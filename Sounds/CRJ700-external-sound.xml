<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier CRJ700 series -->
<!-- External sound configuration -->

<PropertyList>
    <fx>
		<!-- Engine 1 sound -->
		<engine>
			<name>Engine 1 sound 1 external</name>
			<path>Aircraft/CRJ700-family/Sounds/whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.005</factor>
			</volume>
			<pitch>
				<property>engines/engine[0]/rpm</property>
				<offset>0.5</offset>
				<factor>0.007</factor>
			</pitch>
			<position>
				<x>9.30</x>
				<y>2.15</y>
				<z>0</z>
			</position>
			<!-- stuttering issues -->
			<!--orientation>
				<x>-1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>
		<engine>
			<name>Engine 1 sound 2 external</name>
			<path>Sounds/jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/rpm</property>
				<offset>0.5</offset>
				<factor>0.015</factor>
			</volume>
			<pitch>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
			<position>
				<x>9.30</x>
				<y>2.15</y>
				<z>0</z>
			</position>
			<!-- stuttering issues -->
			<!--orientation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>
		<engine>
			<name>Engine 1 reverse thrust</name>
			<path>Aircraft/CRJ700-family/Sounds/reverse-thrust.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/engine[0]/reverser-pos-norm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</volume>
			<position>
				<x>9.30</x>
				<y>2.15</y>
				<z>0</z>
			</position>
		</engine>
		
		<!-- Engine 2 sound -->
		<engine>
			<name>Engine 2 sound 1 external</name>
			<path>Aircraft/CRJ700-family/Sounds/whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.005</factor>
			</volume>
			<pitch>
				<property>engines/engine[1]/rpm</property>
				<offset>0.5</offset>
				<factor>0.007</factor>
			</pitch>
			<position>
				<x>9.30</x>
				<y>-2.15</y>
				<z>0</z>
			</position>
			<!-- stuttering issues -->
			<!--orientation>
				<x>-1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>
		<engine>
			<name>Engine 2 sound 2 external</name>
			<path>Sounds/jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[1]/rpm</property>
				<offset>0.5</offset>
				<factor>0.0152</factor>
			</volume>
			<pitch>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
			<position>
				<x>9.30</x>
				<y>-2.15</y>
				<z>0</z>
			</position>
			<!-- stuttering issues -->
			<!--orientation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>
		<engine>
			<name>Engine 2 reverse thrust</name>
			<path>Aircraft/CRJ700-family/Sounds/reverse-thrust.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/engine[1]/reverser-pos-norm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</volume>
			<position>
				<x>9.30</x>
				<y>-2.15</y>
				<z>0</z>
			</position>
		</engine>
		
		<!-- Landing gear -->
		<gear>
			<name>Gear in transit</name>
			<path>Aircraft/CRJ700-family/Sounds/gear.wav</path>
			<mode>in-transit</mode>
			<property>gear/gear[0]/position-norm</property>
			<position>
				<x>9.30</x>
				<y>2.15</y>
				<z>0</z>
			</position>
			<position>
				<x>1.30</x>
				<y>0</y>
				<z>-2.50</z>
			</position>
		</gear>
		<gear>
			<name>Gear door close</name>
			<path>Sounds/door_close.wav</path>
			<mode>once</mode>
			<condition>
				<and>
					<greater-than>
						<property>sim/time/elapsed-sec</property>
						<value>10</value>
					</greater-than>
					<or>
						<equals>
							<property>gear/gear[0]/position-norm</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[0]/position-norm</property>
							<value>1</value>
						</equals>
					</or>
				</and>
			</condition>
			<volume>
				<offset>-0.75</offset>
			</volume>
			<position>
				<x>1.30</x>
				<y>0</y>
				<z>-2.50</z>
			</position>
		</gear>
		
		<!-- Flaps -->
		<flaps>
			<name>Flaps in transit</name>
			<path>Aircraft/CRJ700-family/Sounds/flaps.wav</path>
			<mode>once</mode>
			<condition>
				<and>
					<property>controls/flight/flaps-start-snd</property>
					<not><property>controls/flight/flaps-stop-snd</property></not>
				</and>
			</condition>
			<position>
				<x>3.8</x>
				<y>0</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>3</reference-dist>
		</flaps>
		<flapsStop>
			<name>Flaps stopping</name>
			<path>Aircraft/CRJ700-family/Sounds/flaps-stop1.wav</path>
			<mode>once</mode>
			<property>controls/flight/flaps-stop-snd</property>
			<position>
				<x>3.8</x>
				<y>0</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>3</reference-dist>
		</flapsStop>
		<slats>
			<name>Slats in transit</name>
			<path>Aircraft/CRJ700-family/Sounds/slats.wav</path>
			<mode>in-transit</mode>		
			<property>surface-positions/slat-pos-norm</property>
			<position>
				<x>-2.60</x>
				<y>0</y>
				<z>-2.30</z>
			</position>
			<max-dist>20</max-dist>
			<reference-dist>3</reference-dist>
		</slats>
		
		<!-- Speedbrakes/spoilers -->
		<speedbrake>
			<name>Left speedbrake in transit</name>
			<path>Aircraft/CRJ700-family/Sounds/spoilers.wav</path>
			<mode>in-transit</mode>
			<property>surface-positions/left-speedbrake-pos-norm</property>
			<volume>
				<offset>-0.7</offset>
			</volume>
			<position>
				<x>1</x>
				<y>-3</y>
				<z>0</z>
			</position>
		</speedbrake>
		<speedbrake>
			<name>Right speedbrake in transit</name>
			<path>Aircraft/CRJ700-family/Sounds/spoilers.wav</path>
			<mode>in-transit</mode>
			<property>surface-positions/right-speedbrake-pos-norm</property>
			<volume>
				<offset>-0.7</offset>
			</volume>
			<position>
				<x>1</x>
				<y>3</y>
				<z>0</z>
			</position>
		</speedbrake>
		
		<!-- APU -->
		<apu>
			<name>APU starting</name>
			<mode>once</mode>
			<path>Aircraft/CRJ700-family/Sounds/apu_start.wav</path>
			<condition>
				<and>
					<property>controls/APU/off-on</property>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>30</max-dist>
			<position>
				<x>14.30</x>
				<y>0</y>
				<z>-0.80</z>
			</position>
		</apu>
		<apu>
			<name>APU running</name>
			<mode>looped</mode>
			<path>Aircraft/CRJ700-family/Sounds/apu_run.wav</path>
			<condition>
				<greater-than-equals>
					<property>engines/engine[2]/rpm</property>
					<value>99</value>
				</greater-than-equals>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>30</max-dist>
			<position>
				<x>14.30</x>
				<y>0</y>
				<z>-0.80</z>
			</position>
		</apu>
		<apu>
			<name>APU shutdown</name>
			<mode>once</mode>
			<path>Aircraft/CRJ700-family/Sounds/apu_shutdown.wav</path>
			<condition>
				<and>
					<not>
						<property>controls/APU/off-on</property>
					</not>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
			<reference-dist>10</reference-dist>
			<max-dist>30</max-dist>
			<position>
				<x>14.30</x>
				<y>0</y>
				<z>-0.80</z>
			</position>
		</apu>
		
		<foo include="CRJ700-internal-sound.xml" omit-node="y" />
	</fx>
	
</PropertyList>
