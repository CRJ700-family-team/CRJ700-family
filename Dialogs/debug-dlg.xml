<?xml version="1.0"?>

<PropertyList>
	<name>debug</name>
	<x>10</x>
	<y>2</y>
	<layout>hbox</layout>
	<default-padding>2</default-padding>
	<font>
		<name>HELVETICA_12</name>
	</font>
	<color>
		<red>0</red>
		<green>0</green>
		<blue>0</blue>
		<alpha>0.8</alpha>
	</color>
	<group>
		<layout>vbox</layout>
		<group>
			<layout>hbox</layout>
			<text>
				<label>HDG_err 000.0 </label>
				<property>autopilot/internal/heading-bug-error-deg</property>
				<format>HDG_err %3.1f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>
			<text>
				<label>t_roll -00.0 </label>
				<property>autopilot/internal/target-roll-deg</property>
				<format>t_roll %2.1f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>
			<text>
				<label>bank -00.0 </label>
				<property>instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
				<format>bank %2.1f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>		
			<text>
				<label>a_cmd -0.000 </label>
				<property>fcs/autopilot/aileron-cmd-norm</property>
				<format>a_cmd %1.3f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>	
		</group>
		<group>
			<layout>hbox</layout>
			<text>
				<label>ref_deg -10.0 </label>
				<property>autopilot/ref/roll-deg</property>
				<format>ref_deg %2.1f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>
			<text>
				<label>ref_hdg -100 </label>
				<property>autopilot/ref/roll-hdg</property>
				<format>ref_hdg %3.0f </format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.4</green>
					<blue>0.2</blue>
					<alpha>1</alpha>
				</color>
			</text>
		</group>
	</group>
	<text>
		<label>| </label>
		<color>
			<red>0.9</red>
			<green>0.2</green>
			<blue>0.4</blue>
			<alpha>1</alpha>
		</color>
	</text>	
	<group>
		<layout>vbox</layout>
		<group>
			<layout>hbox</layout>
			<text>
				<label>TgtFpm -0000 </label>
				<property>autopilot/internal/target-climb-rate-fpm</property>
				<format>TgtFpm %4.0f </format>
				<live>true</live>
				<color>
					<red>0.2</red>
					<green>0.9</green>
					<blue>0.4</blue>
					<alpha>1</alpha>
				</color>
			</text>	
			<text>
				<label>TgtPitch -00.00 </label>
				<property>autopilot/internal/target-pitch-deg</property>
				<format>TgtPitch %2.2f </format>
				<live>true</live>
				<color>
					<red>0.2</red>
					<green>0.9</green>
					<blue>0.4</blue>
					<alpha>1</alpha>
				</color>
			</text>	
			<text>
				<label>ElvTrim -0.0000 </label>
				<property>controls/flight/elevator-trim</property>
				<format>ElvTrim %1.4f </format>
				<live>true</live>
				<color>
					<red>0.2</red>
					<green>0.9</green>
					<blue>0.4</blue>
					<alpha>1</alpha>
				</color>
			</text>		
		</group>
		<group>
			<layout>hbox</layout>
			<text>
				<label>CurFpm -0000 </label>
				<property>instrumentation/vertical-speed-indicator[0]/indicated-speed-fpm</property>
				<format>CurFpm %4.0f </format>
				<live>true</live>
				<color>
					<red>0.2</red>
					<green>0.9</green>
					<blue>0.4</blue>
					<alpha>1</alpha>
				</color>
			</text>	
			<text>
				<label>CurPitch -00.00 </label>
				<property>instrumentation/attitude-indicator[0]/indicated-pitch-deg</property>
				<format>CurPitch %2.2f </format>
				<live>true</live>
				<color>
					<red>0.2</red>
					<green>0.9</green>
					<blue>0.4</blue>
					<alpha>1</alpha>
				</color>
			</text>	

			<text>
				<label>GS -1000 fpm</label>
				<property>instrumentation/nav[0]/gs-rate-of-climb-fpm</property>
				<format>GS %4.0f fpm</format>
				<live>true</live>
				<color>
					<red>0.9</red>
					<green>0.1</green>
					<blue>0.1</blue>
					<alpha>1</alpha>
				</color>
				<visible>
					<not>
						<property>instrumentation/nav[0]/gs-in-range</property>
					</not>
				</visible>			
			</text>	
			<text>
				<label>GS -1000 fpm</label>
				<property>instrumentation/nav[0]/gs-rate-of-climb-fpm</property>
				<format>GS %4.0f fpm</format>
				<live>true</live>
				<color>
					<red>0.1</red>
					<green>0.9</green>
					<blue>0.1</blue>
					<alpha>1</alpha>
				</color>
				<visible>
					<property>instrumentation/nav[0]/gs-in-range</property>
				</visible>			
			</text>				
		</group>
	</group>
</PropertyList>
