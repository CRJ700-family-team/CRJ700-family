<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>info-crj700</name>
    <layout>vbox</layout>
	
    <group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Welcome to the CRJ700/900/1000 series</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	<group>
		<layout>vbox</layout>
		<halign>left</halign>
		<text>
			<label>Documentation can be found in the ./Docs folder.</label>
		</text>
		<text>
			<label>Please use the tutorials and checklists.</label>
			<color>
				<red>0.0</red>
				<green>0.9</green>
				<blue>0.2</blue>
			</color>
		</text>
	
		<group>
			<layout>hbox</layout>
			<checkbox>
				<halign>left</halign>
				<label>Do not show on start</label>
				<property>sim/config/hide-welcome-msg</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>sim/model/known-version</property>
					<property>sim/aircraft-version</property>
				</binding>
				<live type="bool">true</live>
			</checkbox>	
			<button>
				<legend>Checklists</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>checklist</dialog-name>
				</binding>
			</button>			
			<button>
				<legend>?</legend>
				<binding>
					<command>nasal</command>
					<script>gui.showHelpDialog("/sim/help")</script>
				</binding>
			</button>
			<button>
				<legend>Tutorials</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>tutorial</dialog-name>
				</binding>
			</button>
			<button>
				<legend>Bugs/updates</legend>
				<binding>
					<command>open-browser</command>
					<url>https://github.com/d-jsb/CRJ700-family/</url>
				</binding>
			</button>
		</group>
	</group>
</PropertyList>
