<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>autopilot-dev</name>
    <layout>vbox</layout>
	
	<color>
		<red>0.3</red>
		<green>0.3</green>
		<blue>0.3</blue>
		<alpha>0.6</alpha>
	</color>	
    <group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Autopilot Settings</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<color>
				<red>0.5</red>
				<green>0.5</green>
				<blue>0.5</blue>
				<alpha>0.8</alpha>
			</color>	
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<!-- developer -->
	<hrule/>
	<group>
		<layout>table</layout>
		<group>
			<row>0</row>
			<col>0</col>
			<layout>hbox</layout>
			<empty>
				<stretch>1</stretch>
			</empty>		
			<text>
				<halign>center</halign>
				<label>Developer</label>
			</text>
			<empty>
				<stretch>1</stretch>
			</empty>
		</group>
		<text>
			<row>1</row>
			<col>0</col>
			<label>Target roll:</label>
		</text>
		<group>
			<layout>hbox</layout>
			<row>1</row>
			<col>1</col>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>right</halign>
				<legend>&lt;&lt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>autopilot/ref/roll-deg</property>
					<step>-10</step>
					<min>-30</min>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>right</halign>
				<legend>&lt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>autopilot/ref/roll-deg</property>
					<step>-2</step>
					<min>-30</min>
				</binding>
			</button>
			<input>
				<pref-width>55</pref-width>
				<property>autopilot/ref/roll-deg</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live type="bool">true</live>
			</input>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>left</halign>
				<legend>&gt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>autopilot/ref/roll-deg</property>
					<step>2</step>
					<max>30</max>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>left</halign>
				<legend>&gt;&gt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>autopilot/ref/roll-deg</property>
					<step>10</step>
					<max>30</max>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>60</pref-width>
				<halign>center</halign>
				<legend>roll hold</legend>
				<binding>
					<command>property-assign</command>
					<property>controls/autoflight/roll-mode</property>
					<value>1</value>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>60</pref-width>
				<halign>center</halign>
				<legend>hdg hold</legend>
				<binding>
					<command>property-assign</command>
					<property>controls/autoflight/roll-mode</property>
					<value>0</value>
				</binding>
			</button>
		</group>
		<text>
			<row>2</row>
			<col>0</col>
			<label>Elevator Trim:</label>
		</text>
		<group>
			<layout>hbox</layout>
			<row>2</row>
			<col>1</col>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>right</halign>
				<legend>&lt;&lt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>controls/flight/elevator-trim</property>
					<step>-0.1</step>
					<min>-0.5</min>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>right</halign>
				<legend>&lt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>controls/flight/elevator-trim</property>
					<step>-0.01</step>
					<min>-0.5</min>
				</binding>
			</button>
			<input>
				<pref-width>55</pref-width>
				<property>controls/flight/elevator-trim</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live type="bool">true</live>
			</input>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>left</halign>
				<legend>&gt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>controls/flight/elevator-trim</property>
					<step>0.01</step>
					<max>0.5</max>
				</binding>
			</button>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<halign>left</halign>
				<legend>&gt;&gt;</legend>
				<binding>
					<command>property-adjust</command>
					<property>controls/flight/elevator-trim</property>
					<step>0.1</step>
					<max>0.5</max>
				</binding>
			</button>

		</group>
	</group>
</PropertyList>
